{
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "es5",
      "es2015.iterable",
      "es2015.promise",
      "es2015.collection",
      "es2015.symbol.wellknown",
      "esnext.asynciterable",
      "esnext",
      "dom"
    ],
    "downlevelIteration": true,
    "importHelpers": true,
    "module": "commonjs",
    "noUnusedLocals": true,
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./build"
  },
  "typedocOptions": {
    "out": "../../docs/packages/dynamodb-query-iterator",
    "excludePrivate": true,
    "hideGenerator": true
  }
}
